{
    "name": "nostr-ignition",
    "version": "0.0.1",
    "description": "A drop-in library to implement an OAuth-like sign up experience for Nostr apps.",
    "license": "MIT",
    "keywords": [
        "nostr",
        "nip-46",
        "remote-signing"
    ],
    "author": "Jeff Gardner <erskingardner@pm.me>",
    "repository": {
        "type": "git",
        "url": "git://github.com:erskingardner/nostr-ignition.git"
    },
    "homepage": "https://github.com/erskingardner/nostr-ignition",
    "module": "./src/index.ts",
    "type": "module",
    "scripts": {
        "build": "bun build ./src/index.ts --outdir ./dist",
        "dev": "open demo.html && bun build ./src/index.ts --outdir ./dist --watch",
        "format": "prettier --write .",
        "lint": "eslint --ext .ts .",
        "test": "jest"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "bun-types": "latest",
        "eslint": "^8.0.1",
        "eslint-config-standard-with-typescript": "latest",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-n": "^16.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "prettier": "^3.1.1"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "nostr-tools": "^2.1.2"
    }
}
